@model IEnumerable<WebMVC.Models.Room>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm("GetFiltredRooms", "Hotel", FormMethod.Get))
{

    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">city</label>
        @Html.TextBox("city", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
    </div>
    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">phrase</label>
        @Html.TextBox("phrase", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
    </div>
    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">bedForOne</label>
        @Html.TextBox("bedForOne", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
    </div>
    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">bedForTwo</label>
        @Html.TextBox("bedForTwo", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
    </div>
    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">numberOfGuests</label>
        @Html.TextBox("numberOfGuests", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
    </div>
    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">price</label>
        @Html.TextBox("price", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
    </div>
    <div class="form-inline card-header">
        <label class="control-label float-left ml-3">standard</label>
        @Html.TextBox("standard", ViewBag.CurrentFilter as string, new { @class = "form-control col-md-2 float-left ml-3" })
        <input class="btn btn-primary float-left ml-3" type="submit" value="Search" />
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BedForOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BedForTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Standard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BedForOne)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BedForTwo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfGuests)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Standard)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
